<% layout('layouts/biolerplate') %>
    <form action="/campgrounds" method="POST">
        <div>
            <label for="title">Title</label>
            <input type="text" id="title" name="campground[title]" required>
        </div>
        <div>
            <label for="location">Location</label>
            <input type="text" id="location" name="campground[location]" required>
        </div>
        <div>
            <label for="image">Image Url</label>
            <input type="file" id="image" name="campground[image]" required>
        </div>
        <div>
            <label for="price">Price</label>
            <input type="number" id="price" name="campground[price]" required>
        </div>
        <div>
            <label for="description">Description</label>
            <textarea name="campground[description]" id="description" cols="20" rows="10"></textarea>
        </div>
        <button>Add Campground</button>
    </form>
    <a href="/campgrounds">All Campgrounds</a>
