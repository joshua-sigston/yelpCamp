<% layout('layouts/biolerplate') %>
    <form action="/campgrounds/<%= campground._id %>?_method=PUT" method="POST">
        <div>
            <label for="title">Title</label>
            <input type="text" id="title" name="campground[title]" value="<%= campground.title %>" required>
        </div>
        <div>
            <label for="location">Location</label>
            <input type="text" id="location" name="campground[location]" value="<%= campground.location %>" required>
        </div>
        <div>
            <label for="image">Add Image</label>
            <input type="file" id="image" name="campground[image]" value="<%= campground.image %>">
        </div>
        <div>
            <label for="price">Price</label>
            <input type="number" id="price" name="campground[price]" value="<%= campground.price %>" required>
        </div>
        <div>
            <label for="description">Description</label>
            <textarea name="campground[description]" id="description" value="<%= campground.description %>" cols="20" rows="10"></textarea>
        </div>
        <button>submit</button>
        
    </form>
    <a href="/campgrounds/<%= campground._id%>">Back</a>
